{
  "$schema": "https://opencode.ai/config.json",
  "share": "manual",
  "theme": "one-dark",
  "autoupdate": true,

  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },

  "agent": {
    "build": {
      "path": "agent/build.md",
      "permission": {
        "bash": {
          "git *": "ask"
        }
      }
    },
    "plan": {
      "path": "agent/plan.md"
    }
  },

  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "ck-search": {
      "type": "local",
      "command": ["ck", "--serve"]
    }
  },
}
